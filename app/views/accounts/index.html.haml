%h1= "Счета"
%h3= "Адрес:"+ @flat.address

%table
  %thead
    %tr
      %th= "С "
      %th= "По"
      %th= "Сумма"
      %th(colspan="3")

  %tbody
    - @accounts.each do |account| 
      %tr
        %td= account.start_date
        %td= account.stop_date
        %td= account.total
        %td= link_to 'Show', tariff
        %td= link_to 'Edit', edit_tariff_path(tariff)
        %td= link_to 'Destroy', tariff, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'Новый счет', new_flat_account_path(@flat)
