%h1= "Счета"
%h3= "Адрес:"+ @flat.address
.container
  %table
    %thead
      %tr
        %th= "С "
        %th= "По"
        %th= "Сумма"
        %th(colspan="3")
  
    %tbody
      - @accounts.each do |account| 
        %tr
          %td= account.start_date
          %td= account.stop_date
          %td= account.total
          %td= link_to 'Show', flat_account_path(id: account.id)
          %td= link_to 'Destroy', flat_account_path(@flat.id, account.id), method: :delete, data: { confirm: 'Are you sure?' }
  
  %br
  
  = link_to 'Новый счет', new_flat_account_path(@flat)
